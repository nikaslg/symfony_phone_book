{% extends 'base.html.twig' %}

{% block title %}PhoneBook index{% endblock %}

{% block body %}
    <h1>Your number list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone_book in phone_books %}
            <tr>
                <td>{{ phone_book.name }}</td>
                <td>{{ phone_book.phone }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('phone_book_show', {'id': phone_book.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('phone_book_edit', {'id': phone_book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('phone_book_new') }}">Create new</a>
{% endblock %}
